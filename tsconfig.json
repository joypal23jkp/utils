{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ]
  },
  "include": [
    "packages",
    "scripts",
    "test",
    "**/rollup.*",
    "**/build.config.*",
    "**/tsup.config.*",
    "**/vite.config.*",
    "**/vitest.config.*",
    "**/vite.init.*"
  ],
  "exclude": [
    "**/dist/**",
    "node_modules",
    "**/__tests__/**/*",
    "**/*.md"
  ]
}
